// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  authid            String       @id
  whitelist         String       @default("[]") // whitelisted bookmakers to display
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  region            String?      @default("UK")
  phone             String?
  email             String?      @unique // used only for email notis
  smsNotifcations   Boolean      @default(false)
  emailNotifications Boolean     @default(false)
  apikey            String?      @unique
  banned            Boolean      @default(false)
  staff             Boolean      @default(false)
  trialActivated    Boolean      @default(false)
  placedBets        PlacedBets[]
  subscription      Subscription[]
}

model Bet {
  id         Int          @id @default(autoincrement())
  type       String       @default("arbitrage")  // arv, ev
  data       String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  placedBets PlacedBets[]
}

model PlacedBets {
  id                Int      @id @default(autoincrement())
  userId            String
  betId             Int
  totalStake        Float
  profitPercentage  Float
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [authid])
  bet               Bet      @relation(fields: [betId], references: [id])
}

model Subscription {
    id                      Int      @id @default(autoincrement())
    userId                  String
    plan                    String
    planExpiresAt           DateTime
    stripePaymentId         String?  @unique
    stripeSubscriptionId    String?  @unique
    stripeCustomerId        String?
    status                  String   @default("inactive") // inactive, active, paused, payment_failed, cancelled
    createdAt               DateTime @default(now())
    updatedAt               DateTime @updatedAt
    user                    User     @relation(fields: [userId], references: [authid])
    invoices                Invoice[]
}

model Invoice {
    id                      Int      @id @default(autoincrement())
    stripeSubscriptionId    String
    stripeInvoiceId         String
    stripeInvoicePdfUrl     String?
    status                  String
    createdAt               DateTime @default(now())
    updatedAt               DateTime @updatedAt
    subscription            Subscription @relation(fields: [stripeSubscriptionId], references: [stripeSubscriptionId])
}

model SignupDeal {
    id                      Int      @id @default(autoincrement())
    deal                    String
    link                    String
    expiresAt               DateTime
    createdAt               DateTime @default(now())
    updatedAt               DateTime @updatedAt
}

